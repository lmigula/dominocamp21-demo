{% extends "partials/_layout.njk" %}
{% block content %}
  <main class="mdl-layout__content">
    <div class="page-content">
      <!-- Your content goes here 
            {{ content | safe }}
-->
      <div class="mdl-grid">
        <div class="mdl-cell mdl-cell--6-col">
          <div class="demo-card-wide mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
              <h2 class="mdl-card__title-text">Basic</h2>
            </div>
            <div class="mdl-card__supporting-text">
              <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
              Name
            </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
                  {{doc.firstname}}
                  {{doc.lastname}}
                </div>

                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
              Short name/UserID:
            </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
                  {{doc.shortname}}
                </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
             officezip
            </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
                  {{doc.officezip}}
                </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
             officestreetaddress
            </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
                  {{doc.officestreetaddress}}
                </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
             officecountry
            </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
                  {{doc.officecountry}}
                </div>
              </div>
            </div>
          </div>

        </div>
        <div class="mdl-cell mdl-cell--6-col">
          <div class="demo-card-wide mdl-card mdl-shadow--2dp">
            <div class="mdl-card__title">
              <h2 class="mdl-card__title-text">Mail</h2>
            </div>
            <div class="mdl-card__supporting-text">
              <div class="mdl-grid">
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
              Mail system:
            </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
                  {{doc.mailsystem}}
                </div>

                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
              Internet address:
            </div>
                <div class="mdl-cell mdl-cell--6-col">
                  <!-- content here -->
                  {{doc.internetaddress}}
                </div>
              </div>
            </div>
          </div>
        </div>
        {# <div class="mdl-card__menu">
          <button class="mdl-button mdl-button--icon mdl-js-button mdl-js-ripple-effect">
            <i class="material-icons">share</i>
          </button>
        </div> #}
      </div>
    </div>

  </main>
{% endblock %}